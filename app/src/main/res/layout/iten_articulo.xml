<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="410dp"
        android:layout_height="104dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#CEE3F6">

        <TextView
            android:id="@+id/title"
            android:layout_width="398dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="0dp"
            android:textColor="#0C0000"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintStart_toEndOf="@+id/imagePDFDownload"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Articulo" />

        <TextView
            android:id="@+id/publisher"
            android:layout_width="294dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="77dp"
            android:paddingLeft="4dp"
            android:textColor="#130000"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imagePDFDownload"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="Fecha" />

        <TextView
            android:id="@+id/date_published"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="50dp"
            android:paddingLeft="4dp"
            android:textColor="#0C0000"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imagePDFDownload"
            app:layout_constraintTop_toBottomOf="@+id/publisher"
            tools:text="DOI" />

        <ImageView
            android:id="@+id/imagePDFDownload"
            android:layout_width="59dp"
            android:layout_height="63dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="317dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            android:onClick="BajarDoc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pdf" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>